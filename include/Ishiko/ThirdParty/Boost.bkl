setting ISHIKO_CPP_BOOST_ROOT
{
    help = "Path to the Boost installation";
    default = '$(BOOST_ROOT)';
}

template Boost
{
    if ($(toolset) == gnu)
    {
        includedirs += $(ISHIKO_CPP_BOOST_ROOT)/include;
        libdirs += $(ISHIKO_CPP_BOOST_ROOT)/lib;
    }

    if ($(toolset) != gnu)
    {
        includedirs += $(ISHIKO_CPP_BOOST_ROOT)/include/boost-1_90;
        libdirs += $(ISHIKO_CPP_BOOST_ROOT)/lib;
    }
}
